<Window
        x:Class="Brain_Ring.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d" 
        xmlns:viewModels="clr-namespace:LogicBrainRing;assembly=LogicBrainRing"
        xmlns:control="clr-namespace:Brain_Ring.Controls"
        Loaded="MainWindow_OnLoaded"
        Title="MainWindow" Height="768" Width="1366" SizeChanged="Window_SizeChanged">
    <Grid>
        <DockPanel Grid.Row="0" Grid.Column="0">
            <DockPanel.Background>
                <ImageBrush ImageSource="/Images/Backgrounds/brain-ring-background-1366x768.png" AlignmentY="Top" AlignmentX="Center"/>
            </DockPanel.Background>
            <Viewbox Stretch="Fill">
                <StackPanel Name="MainViewBox" Margin="0"/>
            </Viewbox>
        </DockPanel>
        
    </Grid>
</Window>
